@model IEnumerable<Blog.Models.S1>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<style>
    body {
        background-image: url('../../Content/srybsko/background/Mile_Kitic_2001_Prednja.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        color: aqua;
    }
</style>
<audio controls="controls" autoplay="true">
    <source src="~/Content/srybsko/music/Mile%20Kitic%20-%20Paklene%20godine%20[OFFICIAL%20HD%20VIDEO].mp3" type="audio/mpeg" />
</audio>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
